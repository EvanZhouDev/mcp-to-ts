{
	"compilerOptions": {
		"target": "es2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "src",
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
